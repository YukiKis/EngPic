<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading"><%= @user.name %>の辞書</h3>
    <h4 class="text-right"><%= @user.dictionary.words.count %>件の単語</h4>
      <table class="table table-hover no-overflow-table" style="table-layout: fixed;">
        <thead class="row">
          <th class="col-sm-6">単語</th><th class="col-sm-6">意味</th>
        </thead>
      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td class="col-sm-6 ellipsis-text">
              <%= link_to admin_word_path(word) do %>
                <%= attachment_image_tag word, :image, :fill, 30, 30, fallback: "noimage.jpg", size: "30x30" %>&emsp;
                <%= word.name %>
              <% end %>
            </td>
            <td class="col-sm-6 ellipsis-text"><%= word.meaning %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @words, window: 2 %>
    <h4 class="text-right"><%= link_to "ユーザー情報へ戻る", admin_user_path(@user) %></h4>
  </div>
</div>