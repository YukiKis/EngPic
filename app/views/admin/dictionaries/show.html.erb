<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3><%= @user.name %>の辞書</h3>
    <h4 class="text-right"><%= @user.dictionary.words.count %>件の単語</h4>
    <div class="row">
      <% @words.each do |word| %>
        <div class="col-sm-2">
          <div class="admin-word-card">
            <%= link_to admin_word_path(word) do %>
              <%= attachment_image_tag word, :image, fallback: "noimage.jpg", class: "admin-word-image", id: "#word-image-#{ word.id }" %>
        　     <p class="admin-word-text">
                <%= word.name %>
              </p> 
            <% end %>
          </div>
        </div>
      <% end %>
      <%= paginate @words %>
      <h4 class="text-right"><%= link_to "ユーザー情報へ戻る", admin_user_path(@user) %></h4>
    </div>
  </div>
</div>