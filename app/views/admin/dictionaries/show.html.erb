<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3><%= @user.name %>の辞書</h3>
    <h4 class="text-right"><%= @user.dictionary.words.count %>件の単語</h4>
      <div class="row">
        <% @words.each do |word| %>
          <div class="col-sm-2" style="border: 1px solid #ccc;">
            <%= link_to admin_word_path(word) do %>
              <%= attachment_image_tag word, :image, :fill, 30, 30, fallback: "noimage.jpg", size: "30x30", id: "#word-image-#{ word.id }" %>
              <br>
              <%= word.name %>
            <% end %>
          </div>
        <% end %>
        <%= paginate @words %>
      </div>
      <h4 class="text-right"><%= link_to "ユーザー情報へ戻る", href: admin_user_path(@user) %></h4>
    </div>
  </div>
</div>