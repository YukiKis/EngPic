<% provide(:title, "Admin | Users | Edit | #{ @user.name }") %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= render "layouts/error", resource: @user %>
    <h3 class="heading">編集</h3>
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %> 
      <div class="row">
        <div class="col-sm-4 text-center">
          <%= attachment_image_tag @user, :image, class: "edit-img", fallback: "noimage.jpg" %>
          <%= f.attachment_field :image %>
        </div>
    
        <div class="col-sm-6 col-sm-offset-2">
          <div class="form-group">
            <%= f.label :name, "名前", class: "control-label" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス", class: "control-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "紹介文", class: "control-label" %><br>
            <%= f.text_area :introduction, rows: 4, class: "form-control" %>
          </div>
          <div class="form-group form-inline">
            <%= f.radio_button :is_active, :true, class: "form-control" %>
            <%= f.label :is_active_true, "在籍", class: "control-label" %>
            &emsp;
            <%= f.radio_button :is_active, :false, class: "form-control" %>
            <%= f.label :is_active_false, "退会",  class: "control-label" %>
          </div>
          </div>
          <div class="text-right">
            <%= f.submit "Update", class: "btn btn-primary" %>
            <%= link_to "Back", admin_user_path(@user), class: "btn btn-default" %>
          </div>
        </div> 
      </div>
    <% end %>
  </div>
</div>