<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= render "layouts/error", resource: @user %>
    <h3 class="heading">編集</h3>
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %> 
      <div class="row">
        <div class="col-sm-4 text-center">
          <%= attachment_image_tag @user, :image, class: "edit-img", fallback: "noimage.jpg" %>
          <%= f.attachment_field :image %>
        </div>
    
        <div class="col-sm-6 col-sm-offset-2">
          <div class="form-group">
            <%= f.label :name, "Name", class: "control-label" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "Introduction", class: "control-label" %><br>
            <%= f.text_area :introduction, rows: 4, class: "form-control" %>
          </div>
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Back", admin_users_path, class: "btn btn-default" %>
        </div> 
      </div>
    <% end %>
  </div>
</div>