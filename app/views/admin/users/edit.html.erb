<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= render "layouts/error", resource: @user %>
    <h3>編集</h3>
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %> 
      <div clsas="row">
        <div class="col-sm-4">
          <%= attachment_image_tag @user, :image, :fill, 150, 150, fallback: "noimage.jpg", size: "150x150" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="col-sm-8">
          <div class="row">
            <div class="col-sm-4">
                <%= f.label :name, "名前", class: "control-label" %>
              </div>
              <div class="col-sm-8 form-group">
                <%= f.text_field :name, class: "form-control"%>
              </div>
            </div>
      
            <div clsas="row">
              <div class="col-sm-4">
                <%= f.label :introduction, "紹介文", class: "control-label" %>
              </div>  
              <div class="col-sm-8 form-group">
                <%= f.text_area :introduction, class: "form-control", rows: 5 %>
              </div>
            </div>
        
            <div clsas="row">
              <div class="col-sm-4">
                <%= f.label :email, "メールアドレス", class: "control-label" %>
              </div>
              <div class="col-sm-8 form-group">
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="text-right">
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
          </div>
          <div class="text-right">
            <%= link_to "Back", admin_user_path(@user), class: "btn btn-default btn-lg" %>)
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>