<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3>Users</h3>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-3">Name</th><th class="col-sm-2">Word count</th><th class="col-sm-7">Word image</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= attachment_image_tag user, :image, :fill, 30, 30, fallback: "noimage.jpg", size: "30x30", id: "user-image-#{ user.id }" %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.words.count %>ä»¶</td>
          <td>
            <% user.words.sample(5).each do |word| %>
              <%= attachment_image_tag word, :image, :fill, 30, 30, fallback: "noimage.jpg", size: "30x30", id: "word-image-#{ word.id }" %>
            <% end %>
          </td>
        <% end %>
      </tbody>
      <%= paginate @users %>
    </table>
  </div>
</div>