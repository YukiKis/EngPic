            <td class="col-xs-12 col-sm-6 col-sm-offset-2"><%= @user.name %></td>
          </tr>
          <tr class="row">
            <th class="col-sm-4">メールアドレス</th>
            <td class="col-sm-6 col-sm-offset-2"><%= @user.email %></td>
          </tr>
          <tr class="row">
            <th class="col-sm-4">紹介文</th>
            <td class="col-sm-6 col-sm-2"><%= @user.introduction %></td>
          </tr>
        </table>
