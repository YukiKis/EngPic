<div class="row">
  <div class="col-sm-12">
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <%= link_to "LOGO", root_path %>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-content">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="navbar-content">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><a href="#">Words</a></li>
            <li><a href="#">MyDictionary</a></li>
            <li><%= link_to "SignOut", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "HowTo", howto_path %></li>
            <li><%= link_to "SignUp", new_user_registration_path %></li>
            <li><%= link_to "SignIn", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
  </div>
</div>