<div class="row">
  <div class="col-sm-12">
    <div id="container">
      <div id="theTarget">
        <div class="slide-image"></div>
        <div class="slide-image"></div>
        <div class="slide-image"></div>
      </div>
    </div>
  </div>
</div>

<div class="row top-row">
  <div class="col-sm-10 col-sm-offset-1 top-heading">
    <div class="text-center">
      <h1 class="heading"><b>EngPic</b>, <br>Dictionary<br>ONLY for YOU,<br> but WITH EVERYBODY</h1>
    </div>
    <table class="table">
      <% if Word.all.present? %>
      <tr class="row">
        <th class="col-sm-5 text-center table-heading">Tag</th>
        <td class="col-sm-7">
          <% @tags.sample(4).each do |t| %>
            <%= link_to t, tagged_words_path(t), class: "table-data" %>
          <% end %>
          <br><%= link_to "See more tags", tags_words_path %>
        </td>
      </tr>
    
      <tr class="row">
        <th class="col-sm-5 text-center table-heading">Word</th>
        <td class="col-sm-7">
          <% @words.sample(4).each do |w| %>
            <%= link_to w, same_name_words_path(w), class: "table-data"%>
          <% end %>
        </td>
      </tr>
    
      <tr class="row">
        <th class="col-sm-5 text-center table-heading">Meaning</th>
        <td class="col-sm-7">
          <% @meanings.sample(4).each do |w| %>
            <%= link_to w, same_meaning_words_path(w), class: "table-data" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
