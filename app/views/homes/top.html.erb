<div class="row" style="margin-bottom: 100px;">
  <div class="col-sm-12">
    <div id="container">
      <div id="theTarget">
        <div style="background-image: url('<%= asset_path("english.jpg") %>');"></div>
        <div style="background-image: url('<%= asset_path("fun.jpg") %>');"></div>
        <div style="background-image: url('<%= asset_path("picture.png") %>');"></div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <h1>TOP PAGE</h1>
      <div class="col-sm-5">
        <p>TOPIC</p>
      </div>
      <div class="col-sm-7">
        <p>
          <% Word.tag_counts.sample(4).each do |t| %>
            <%= link_to t.name, tagged_words_path(t.name) %>
          <% end %><%= link_to "See more tags", tags_words_path %>
        </p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-5">
        <p>WORD</p>
      </div>
      <div class="col-sm-7">
        <p>
          <% Word.all.sample(4).each do |w| %>
            <%= link_to w.name, same_name_words_path(w.name) %>
          <% end %>
        </p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-5">
        <p>MEANING</p>
      </div>
      <div class="col-sm-7">
        <p>
          <% Word.all.sample(4).each do |w| %>
            <%= link_to w.meaning, same_meaning_words_path(w.meaning) %>
          <% end %>
        </p>
      </div>
    </div>
    
  </div>
</div>
