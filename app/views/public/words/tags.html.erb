<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1 class="heading">Tag list</h3>
    <h3 class="text-right">
      <%= search_form_for @q, url: tag_search_words_path, local: true, class: "form-inline"  do |f| %>
        <%= f.label :name_start, "タグ", class: "control-label" %>
        <%= f.text_field :name_start, class: "form-control" %>
        <%= f.submit "検索", class: "btn btn-default" %>
      <% end %>
      <%= @tag_count %> tags in Total</h3>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-4">Tag name</th><th class="col-sm-3">Word counts</th><th class="col-sm-5"></th>
      </thead>
      <tbody>
        <% @tags.each do |t| %>
          <tr>
            <td><%= link_to t.name, tagged_words_path(t.name) %></td>
            <td><%= pluralize(Word.tagged_with(t).count, "word") %></td>
            <td>
              <% Word.tagged_with(t).sample(4).each do |w| %>
                <%= link_to word_path(w) do %>
                  <%= attachment_image_tag w, :image, :fill, 30, 30, fallback: "noimage.jpg", size: "30x30" %>
                <% end %>
              <% end %>
            </td>
          </tr> 
        <% end %>
      </tbody>
    </table>
    <%= paginate @tags %>
  </div>
</div>