<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
   <h3>パスワード変更</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "public/users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label :password, "新しいパスワード", class: "control-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-sm-5">
          <div class="form-group form-inline">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-4"></div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "control-label" %>
        </div>
        <div class="col-sm-5">
          <div class="form-group form-inline">
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-4"></div>
      </div>
      <div class="text-right">
        <%= f.submit "パスワードを変更する", class: "btn btn-default" %>
      </div>  
      <div class="text-right margin-top-sm">
        <%= link_to "or Log in", new_user_session_path %>
      </div>
      <% end %>
      
    <%#= render "public/users/shared/links" %>
  </div>
</div>
