<% provide(:title, "Register") %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1 class="heading">執筆者登録</h1>
  </div>
</div>

<div class="row" style="position: relative;">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_with model: @user, url: registration_path(resource), class: "new_user", id: "new_user", local: true do |f| %>
      <%= render "public/users/shared/error_messages", resource: resource %>
    
      <div class="row">
        <div class="col-sm-5 z-index-1">
          <%= f.label :name, class: "control-label" %>※必須、2～20文字
        </div>
        <div class="col-sm-7 form-group z-index-1">
          <%= f.text_field :name,autofocus: true, class: "form-control" %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-5 z-index-1">
          <%= f.label :introduction, class: "control-label" %>
        </div>
        <div class="col-sm-7 form-group z-index-1">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
      
    
      <div class="row">
        <div class="col-sm-5 z-index-1">
          <%= f.label :email, class: "control-label" %>※必須
        </div>
        <div class="col-sm-7 form-group z-index-1">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-5 z-index-1">
          <%= f.label :password, class: "control-label" %>※必須 
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-sm-7 form-group z-index-1">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-5 z-index-1">
          <%= f.label :password_confirmation, class: "control-label" %>※必須
        </div>
        <div class="col-sm-7 form-group z-index-1">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
  
      <div class="row">
        <div class="col-sm-12 text-center z-index-1">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      </div>  
    <% end %>
    <%#= render "public/users/shared/links" %>
  </div>
  <%= image_tag("writing.png", class: "new-registration-image") %>
</div>