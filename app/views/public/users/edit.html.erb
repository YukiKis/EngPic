<% provide(:title, "Users | Edit | #{ @user.name }") %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading">Your Profile</h3>
    <%= render "layouts/error", resource: @user %>
    <div class="row">
      <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        <div class="col-sm-4 col-sm-offset-1 text-center">
          <%= attachment_image_tag @user, :image, class: "edit-img", fallback: "noimage.jpg" %>
          <%= f.attachment_field :image %>
        </div>
        
        <div class="col-sm-4 col-sm-offset-2">
          <div class="form-group">
            <%= f.label :name, "Name", class: "control-label" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, "Introduction", class: "control-label" %><br>
            <%= f.text_area :introduction, rows: 4, class: "form-control" %>
          </div>
          <div class="form-group">
            
            <%= f.label :email, "Email", class: "control-label" %><br>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "退会する", leave_user_path(@user), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>