<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        <div class="col-sm-4">
          <%= attachment_image_tag @user, :image, class: "img-square", fallback: "noimage.jpg", size: "225x225" %>
          <%= f.attachment_field :image %>
        </div>
        
        <div class="col-sm-8">
          <div class="form-group form-inline">
            <%= f.label :name, "Name", class: "control-label" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group form-inline">
            <%= f.label :introduction, "Introduction", class: "control-label" %><br>
            <%= f.text_area :introduction, rows: 4, class: "form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>