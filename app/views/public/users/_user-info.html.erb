<div id="user-info">
  <div class="text-center margin-bottom-sm">
    <%= attachment_image_tag user, :image, class: "my-img", fallback: "noimage.jpg" %>
  </div>
  <table class="table table-hover user-info-table">
    <tr><th>Name</th><td><%= user.name %></td></tr>
    <tr>
      <th>Introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr><th><%= link_to "Followers", followers_user_path(user) %></th><td id="followers-number"><%= user.followers.where(is_active: true).count %></td></tr>
    <tr><th><%= link_to "Followings", followings_user_path(user) %></th><td id="followers-number"><%= user.followings.where(is_active: true).count %></td></tr>
  </table>
  <% if user == current_user %>
    <div>
      <%= link_to edit_user_path(user), class: "btn btn-default btn-block" do %>
        <i class="fas fa-wrench"></i> Editing
      <% end %>
    </div>
  <% end %>
</div>