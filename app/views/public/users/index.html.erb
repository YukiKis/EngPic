<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3>Authors</h3>
    <%= search_form_for @q, url: search_users_path, local: true do |f| %>
      <%= f.label :name_start, "Name", class: "control-label" %>
      <%= f.search_field :name_start, class: "form-control" %>
      <%= f.submit %>
    <% end %>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-3"></th><th class="col-sm-4">Name</th><th class="col-sm-3">Word Count</th><th class="col-sm-2"></th>  
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
</div>