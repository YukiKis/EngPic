<% provide(:title, "Users") %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading">Users</h3> 
    <% if current_user == @user %>
      <%= search_form_for @q, url: search_users_path, class: "form-inline", local: true do |f| %>
        <%= f.label :name_start, "Name", class: "control-label" %>
        <%= f.search_field :name_start, class: "form-control" %>
        <%= f.submit class: "btn btn-default" %>
      <% end %>
    <% end %>
    <table class="table table-hover" style="margin-top: 20px; vertical-align: middle;">
      <thead class="row">
        <th class="col-xs-3 col-sm-2"></th><th class="col-xs-5 col-sm-4">Name</th><th class="col-xs-4 col-sm-2">Word Count</th><th class="hidden-xs col-sm-2">Word tags</th><th class="hidden-xs col-sm-2"></th>  
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
    <%= paginate @users, window: 1 %>
  </div>
</div>