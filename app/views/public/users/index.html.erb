<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading">Authors</h3>
    <%= search_form_for @q, url: search_users_path, class: "form-inline", local: true do |f| %>
      <%= f.label :name_start, "Name", class: "control-label" %>
      <%= f.search_field :name_start, class: "form-control" %>
      <%= f.submit class: "btn btn-default" %>
    <% end %>
    <table class="table table-hover">
      <thead class="row">
        <th class="col-sm-2"></th><th class="col-sm-4">Name</th><th class="col-sm-2">Word Count</th><th class="col-sm-2">Word tags</th><th class="col-sm-2"></th>  
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
    <div class="paginate">
      <%= paginate @users %>
    </div>

  </div>
</div>