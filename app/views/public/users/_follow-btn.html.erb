<% if current_user != user %>
  <% if current_user.following?(user) %>
      <%= link_to "Unfollow", unfollow_user_path(user), method: :delete, remote: true, class: "btn btn-danger btn-block" %>
    <% else %>
      <%= link_to "Follow", follow_user_path(user), method: :post, remote: true, class: "btn btn-primary btn-block" %>
  <% end %>
<% end %>