<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      
      <div class="col-sm-3">
        <%= render "user-info", user: @user %>
        <span id="follow-btn-<%= @user.id %>"><%= render "follow-btn", user: @user %></span>
      </div>
      
      <div class="col-sm-9">
        <h3 class="heading">Words</h3>
        <div class="row">
          <% @words.each do |word| %>
            <div class="col-sm-3">
              <%= render "layouts/card", word: word %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>