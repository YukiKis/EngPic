<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      
      <div class="col-sm-3">
        <%= render "user-info", user: @user %>
        <span id="follow-btn-<%= @user.id %>"><%= render "follow-btn", user: @user %></span>
      </div>
      
      <div class="col-sm-9">
        <h3 class="heading">Words</h3>
        <p>
          In <span class="bg-warning">YELLOW</span>, your word IN your dictionary<br>
          In <span class="bg-info">BLUE</span>, your word NOT in yours
        </p>
        <% if current_user == @user %>
          <p class="text-right"><%= link_to "New word", new_word_path, class: "btn btn-primary" %></p>
        <% end %>
        <div class="row">
          <% @words.each do |word| %>
            <div class="col-sm-3">
              <%= render "layouts/card", word: word %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>