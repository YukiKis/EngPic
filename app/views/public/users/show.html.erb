<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      
      <div class="col-sm-3">
        <%= attachment_image_tag @user, :image, class: "img-square", fallback: "noimage.jpg", size: "225x225" %>
        <table class="table table-hover">
          <tr><th>Name</th><td><%= @user.name %></td></tr>
          <tr><th>Introduction</th><td><%= @user.introduction %></td></tr>
        </table>
        <% if @user = current_user %>
          <%= link_to "Editing", edit_user_path(@user), class: "btn btn-block" %>
        <% else %>
          <span>Follow / Unfollow</span>
        <% end %>
      </div>
      
      <div class="col-sm-9">
        <div class="row">
          <%# if @user.words.any? %>
            <%# @user.words.each do |word| %>
              <%#= render "layouts/word", word: word %>
            <%# end %>
          <%# else %>
            <h4>No words yet in the dictionary</h4>
          <%# end %>
        </div>
      </div>
      
    </div>
  </div>
</div>