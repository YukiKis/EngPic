<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      
      <div class="col-sm-3">
        <%= render "user-info", user: @user %>
        <% if @user == current_user %>
          <span><%= link_to "Editing", edit_user_path(@user), class: "btn btn-block" %></span> 
        <% end %>
        <span id="follow-btn-<%= @user.id %>"><%= render "follow-btn", user: @user %></span>
      </div>
      
      <div class="col-sm-9">
        <div class="row">
          <% if @user.words.any? %>
            <% @user.words.each do |word| %>
              <%= render "layouts/word", word: word %>
            <% end %>
          <% else %>
            <h4>No words yet in the dictionary</h4>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>