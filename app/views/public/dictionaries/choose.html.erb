<% provide(:title, "Test") %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading">Check your vocabulary</h3>
    <h4>・タグからテスト</h4>
    <%= form_with scope: :category, url: question_dictionary_path, class: "form-inline", local: true do |f| %>
      <%= f.select :tag, @tags, {}, { class: "form-control" } %>
      <%= f.submit "Check!", class: "btn btn-default" %>
    <% end %>
    <h4>・ランダムでテスト</h4>
    <%= link_to "Check!", question_dictionary_path, class: "btn btn-default" %>
    <h4>・絵からテスト</h4>
    <%= link_to "Check", question_image_dictionary_path, class: "btn btn-default" %>
    <br>
    <div class="text-right">
      <%= image_tag("books.png", width: "30%", height: "30%") %>
    </div>    
    <%= link_to "Back", dictionary_path %>
  </div>
</div>