<% if current_user.dictionary.words.include?(word) %>
  <%= link_to "Remove", remove_dictionary_path(word), method: :delete, remote: true, class: "btn btn-danger btn-block" %>
<% else %>
  <%= link_to "Add", add_dictionary_path(word), method: :post, remote: true, class: "btn btn-primary btn-block" %>
<% end %>