<div class="row">
  <div class="col-sm-10 col-sm-1">
    <h3>Check your skill!</h3>
    <p>We have <%= pluralize(@questions.count, "question") %></p>
    <div class="row">
      <%= form_with scope: :answer, local: true do |f| %>
        <% @questions.each_with_index do |question, i| %>
          <div class="col-sm-6">
            <%= attachment_image_tag question, :image, :fill, 50, 50, fallback: "noimage.jpg", size: "50x50" %>
            <%= f.label :answer_i, "Answer", class: "control-label" %>
            <%= f.text_field :answer_i, class: "form-control" %>
          </div>
        <% end %>

        <%= f.submit "Finish!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>