<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 class="heading">Check your skill!</h3>
    <p>We have <%= pluralize(@questions.count, "question") %></p>
    <div class="row">
      <%= form_with scope: :check, url: check_dictionary_path, local: true do |f| %>
        <% @questions.each do |question| %>
          <div class="col-sm-3">
            <div class="card answer-card">
              <%= attachment_image_tag question, :image, fallback: "noimage.jpg", id: "img-#{ question.id }" %><br>
              <div class="answer-form">
                <%= f.label :"answer#{ question.id }", "Answer", class: "control-label", id: "label-#{ question.id }" %>
                <%= f.text_field :"answer#{ question.id }", class: "form-control" %>
                <%= f.hidden_field :"question#{ question.id }", value: question.id %>
              </div>
            </div>
          </div>
        <% end %>

        <%= f.submit "Finish!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>